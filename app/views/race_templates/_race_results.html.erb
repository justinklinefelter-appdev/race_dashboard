<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Results

    <a data-toggle="collapse" href="#race_results_new_form">
      Add result
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @race.results.each do |result| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/results/<%= result.id %>">
          <%= result.user_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_result_from_race/<%= result.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="race_results_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "race_templates/race_results_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
