<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Results

    <a data-toggle="collapse" href="#race_results_new_form">
      Add result
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @race.results.each do |result| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/results/<%= result.id %>">
          <%= result.user_id %>
        </a>

        <%if current_user == result.user %>
          <a href="/delete_result_from_race/<%= result.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="race_results_new_form">
        <%= render partial: "race_templates/race_results_new_form" %>
      </div>
    </div>

  </ul>
</div>
