<h1>
  Edit event #<%= @event.id %>
</h1>

<hr>

<!-- Form event start -->
<form action="/update_event/<%= @event.id %>" method="post">
<!-- Form event end -->

  <!-- Label and input for distance_id start -->
  <div class="form-group">
    <label for="distance_id">
      Distance
    </label>

    <!-- Input for distance_id start -->
    <input type="text" id="distance_id" name="distance_id" class="form-control" value="<%= @event.distance_id %>">
    <!-- Input for distance_id end -->
  </div>
  <!-- Label and input for distance_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @event.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Update event
  </button>
</form>

<hr>

<a href="/events">
  Go back
</a>
