<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<form action="/update_comment/<%= @comment.id %>" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @comment.body %>">
  </div>

  <div class="form-group">
    <label for="commentor_id">
      Commentor
    </label>

    <%= select_tag(:commentor_id, options_from_collection_for_select(User.all, :id, :created_at, @comment.commentor_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="result_id">
      Result
    </label>

    <%= select_tag(:result_id, options_from_collection_for_select(Result.all, :id, :user_id, @comment.result_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
