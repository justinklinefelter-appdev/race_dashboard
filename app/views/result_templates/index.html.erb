<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All results
    </h1>

    <a href="/results/new" class="btn btn-block btn-outline-secondary">
      Add a new result
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "result_templates/results_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Race
        </th>

        <th>
          Time
        </th>

        <th>
          Overall place
        </th>

        <th>
          Age group place
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @results.each do |result| %>
      <tr>
        <td>
          <%= result.id %>
        </td>

        <td>
          <% if result.user.present? %>
            <a href="/users/<%= result.user.id %>">
              <%= result.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if result.race.present? %>
            <a href="/races/<%= result.race.id %>">
              <%= result.race.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= result.time %>
        </td>

        <td>
          <%= result.overall_place_id %>
        </td>

        <td>
          <%= result.age_group_place_id %>
        </td>

        <td>
          <%= result.body %>
        </td>

        <td>
          <%= time_ago_in_words(result.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(result.updated_at) %> ago
        </td>

        <td>
          <a href="/results/<%= result.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @results, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
